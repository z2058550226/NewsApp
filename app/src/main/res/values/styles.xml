<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- 新闻的字体大小和字体颜色 -->
    <style name="news_content">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="manage_title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="manage_sub_title">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 新闻文章内容底部的特殊信息 -->
    <style name="special_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/special_text</item>
    </style>

    <style name="download_progress">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#3498DB</item>
        <item name="progress_reached_bar_height">2dp</item>
        <item name="progress_unreached_bar_height">1dp</item>
    </style>

</resources>
